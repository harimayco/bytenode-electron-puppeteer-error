{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES5",
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "lib": [
    "es2018",
    "dom"
  ],
  "include": [
    "src/**/*"
  ]
}